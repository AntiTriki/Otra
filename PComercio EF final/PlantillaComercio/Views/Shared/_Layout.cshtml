                                List<AccesoDatos.Infrastructure.Data.DataModels.categoria_evento> Categorias = db.categoria_evento.ToList();
                                foreach (AccesoDatos.Infrastructure.Data.DataModels.categoria_evento cat in Categorias)
                                {
                                    IEnumerable<string> subCat = db.categoria_evento.Where(x => x.id_subcategoria == cat.id).Select(x => x.nombre).ToList();
                                    navbar.Add(cat.nombre, subCat);
                                }
                                int count=0;
                                foreach (KeyValuePair<string,IEnumerable<string>> nav in navbar)
                                {
                                    if (count < 8)
                                    {
                                    <li>
                                        <a href="">@nav.Key<span class="caret"></span></a> 
                                        <ul class="dropdown-menu">
                                            @foreach (var subNav in nav.Value)
                                            {
                                                <li><a href="@Url.Action("GetEventosByCategory","Evento", new { categorynombre = subNav.Trim() })">@subNav.Trim()</a></li>
                                            }
                                        </ul>
                                    </li>
                                        count++;
                                    } 
                                }
                            }                              
                         
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
